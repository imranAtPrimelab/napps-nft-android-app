<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" />

    <style name="Toolbar.Title" parent="Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="Setting" />
    <style name="HomeFragment"/>

    <style name="SendNFT.Title" parent="HomeFragment">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SendNFT.Description" parent="HomeFragment">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Setting.Category" parent="Setting">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Setting.Title" parent="Setting">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="BottomSheetTransparentStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetTransparentDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetTransparentStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Button" />

    <style name="Button.Dialog" parent="Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>


    <style name="ButtonGray.Dialog" parent="Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/box_selected_bg</item>
    </style>

</resources>